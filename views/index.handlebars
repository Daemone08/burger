{{!-- body html goes here --}}
<div class="container bg-light border my-3 pb-3">
    <div class="row">
        <div class="col-12 text-center">
            <h1>BURGER TIME</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h2>Burgers Ordered</h2>
            <ul>
                {{#each burgers}} {{#unless devoured}}
                {{>burgers/burger-block}}
                {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2>Burgers Eaten</h2>
            <ul>
                {{#each burgers}} {{#if devoured}}
                {{>burgers/burger-block}}
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h2>Order Your Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="burger_input">Burger Name:</label>
                    <input type="text" id="burger_input" name="name">
                </div>

                <button type="submit">Order!</button>
            </form>

        </div>
    </div>